{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["**/*.spec.ts"]
}
